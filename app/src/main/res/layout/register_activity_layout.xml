<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_activity_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#99000000"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="51dp"
            android:layout_marginRight="51dp"
            android:layout_marginTop="105dp"

            android:gravity="center_vertical"
            android:background="@drawable/login_et_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="17dp"
                android:src="@mipmap/login_account" />

            <EditText
                android:id="@+id/register_activity_phone_num_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:paddingTop="8dp"
                android:layout_marginLeft="18dp"
                android:paddingBottom="8dp"
                android:textSize="14dp"
                android:background="@null"
                android:textColor="@color/white"
                android:textColorHint="#797979" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/login_et_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="17dp"
                android:src="@mipmap/login_pass" />

            <EditText
                android:id="@+id/register_activity_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:background="@null"
                android:layout_marginLeft="18dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:textColorHint="#797979"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/register_activity_verify_phone_num_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:hint="请输入验证码"
                android:background="@drawable/login_et_bg"
                android:textColor="@color/white"
                android:paddingLeft="5dp"
                android:textSize="14dp"
                android:gravity="center"
                android:textColorHint="@color/white" />

            <TextView
                android:id="@+id/register_activity_get_verify_phone_num_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="14dp"
                android:gravity="center"
                android:background="@drawable/round_little_corners_gray_bg"
                android:text="剩余60秒" />
        </LinearLayout>

        <TextView
            android:id="@+id/register_activity_submit_tv"
            android:layout_width="205dp"
            android:layout_height="42dp"
            android:text="注册"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="5dp"
            android:textSize="15dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_corners_blue_bg"

            />

        <include
            layout="@layout/bottom_share_im"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="69dp" />
    </LinearLayout>



</LinearLayout>