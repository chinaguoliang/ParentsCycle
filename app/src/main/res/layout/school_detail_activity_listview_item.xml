<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/school_detail_activity_listview_item_user_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/user_default_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/school_detail_activity_listview_item_user_icon_iv"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/school_detail_activity_listview_item_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="妞妞妈妈"
                        android:textColor="@color/black"
                        android:textSize="@dimen/big_text_size" />

                    <TextView
                        android:id="@+id/school_detail_activity_listview_item_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="4小时前"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/small_text_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/parents_cycle_set_good" />
            </RelativeLayout>

            <TextView
                android:id="@+id/school_detail_activity_listview_item_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:text="14世纪明朝年代，这种把崎岖山地开垦成良田的技术传遍了中国和东南亚，哈尼人更把哀牢山这一带的山区变成了一幅幅“
            艺术品”。于是明朝皇帝给哈尼族人赐名“山岳神雕手”，这一美名便世代相传下来。"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/normal_text_size"
                android:paddingBottom="15dp"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_gray"
            android:layout_toRightOf="@+id/school_detail_activity_listview_item_user_icon_iv"
            android:layout_alignParentBottom="true"
            ></View>
    </RelativeLayout>





</LinearLayout>