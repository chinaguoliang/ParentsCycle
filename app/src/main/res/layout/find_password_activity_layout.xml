<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_activity_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#99000000"
        android:layout_height="match_parent">
        <include
            android:id="@+id/find_password_top_title"
            layout="@layout/title_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/find_password_top_title"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="58dp"
                android:layout_marginRight="58dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/login_et_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:src="@mipmap/login_account" />

                <EditText
                    android:id="@+id/find_password_activity_phone_num_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/white"
                    android:textColorHint="#f1f1f1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="58dp"
                android:layout_marginRight="58dp"
                android:layout_marginTop="13dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/find_password_activity_phone_verify_num_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/login_et_bg"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:textColor="@color/white"
                    android:textColorHint="#f1f1f1" />

                <TextView
                    android:id="@+id/find_password_activity_request_verify_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/round_little_corners_gray_bg"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="获取验证码"
                    android:textColor="@color/white" />
            </LinearLayout>


            <TextView
                android:id="@+id/find_password_activity_next_step_tv"
                android:layout_width="195dp"
                android:layout_height="40dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/round_corners_blue_bg"
                android:paddingBottom="5dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:text="下一步"
                android:textColor="#f1f1f1" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>