<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f2f2"
    android:orientation="vertical">

    <include
        layout="@layout/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"></include>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/circle_menu_activity_baby_show_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/baby_show_icon"
                android:gravity="center_horizontal"
                android:text="宝宝秀"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_gray_3" />

            <TextView
                android:id="@+id/circle_menu_activity_baby_parents_cycle_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/parents_cycle"
                android:gravity="center_horizontal"
                android:text="父母圈"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_gray_3"
                />

            <TextView
                android:id="@+id/circle_menu_activity_baby_safe_send_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/safe_get_send"
                android:gravity="center_horizontal"
                android:text="考勤打卡"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_gray_3"
                 />

            <TextView
                android:id="@+id/circle_menu_activity_chat_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/chat_icon"
                android:gravity="center_horizontal"
                android:text="聊天"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_gray_3"
                 />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">




            <TextView
                android:id="@+id/circle_menu_activity_food_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/food_and_drink"
                android:gravity="center_horizontal"
                android:textSize="@dimen/normal_text_size"
                android:text="饮食"
                android:textColor="@color/text_gray_3" />

            <TextView
                android:id="@+id/circle_menu_activity_course_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/course_list"
                android:gravity="center_horizontal"
                android:textSize="@dimen/normal_text_size"
                android:text="课程表"
                android:textColor="@color/text_gray_3" />

            <TextView
                android:id="@+id/hall_main_channel_fragment_layout_send_announcement_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/video_course"
                android:gravity="center_horizontal"
                android:text="发布公告"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_gray_3" />

            <TextView
                android:id="@+id/hall_main_channel_fragment_layout_safe_send_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/safe_get_send"
                android:gravity="center_horizontal"
                android:text="安全接送"
                android:visibility="invisible"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_gray_3" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/circle_menu_activity_close_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/white_circle"
            android:gravity="center"
            android:text="×"
            android:textSize="30dp"
            android:textColor="@color/text_gray_3" />
    </RelativeLayout>

</LinearLayout>