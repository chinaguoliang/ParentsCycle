<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/make_class_add_person_activity_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/main_blue_color"
            android:textColor="@color/white"
            android:text="提交" />

        <ListView
            android:id="@+id/make_class_add_person_activity_content_lv"
            android:layout_above="@+id/make_class_add_person_activity_submit_btn"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:divider="@color/bg_gray"
            android:dividerHeight="1dp"
            android:cacheColorHint="#00000000"
            android:layout_height="match_parent">

        </ListView>


    </RelativeLayout>
</LinearLayout>