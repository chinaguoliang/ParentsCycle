<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">
        <Button
            android:id="@+id/search_school_activity_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="取消"
            android:background="@null"
            android:textSize="@dimen/normal_text_size"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:maxLength="30"
            android:layout_toLeftOf="@+id/search_school_activity_cancel_btn"
            android:hint="请输入幼儿园名称"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            android:background="@drawable/round_corners_gray_bg_2"
            />
    </RelativeLayout>
    <ExpandableListView
        android:id="@+id/search_school_activity_ep_lv"
        android:dividerHeight="1dp"
        android:divider="@color/bg_gray"
        android:cacheColorHint="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ExpandableListView>
</LinearLayout>