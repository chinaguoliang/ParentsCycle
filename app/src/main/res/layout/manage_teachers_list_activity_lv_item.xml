<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_gray"
        >

    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hall_mine_fragment_lv_item_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小明"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/big_text_size"
            />


        <ImageView
            android:id="@+id/hall_mine_fragment_lv_item_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            />

        <EditText
            android:id="@+id/hall_mine_fragment_lv_item_right_content_et"
            android:layout_toRightOf="@+id/hall_mine_fragment_lv_item_desc_tv"
            android:layout_toLeftOf="@+id/hall_mine_fragment_lv_item_right_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:background="@null"
            android:singleLine="true"
            android:paddingRight="10dp"
            />
    </RelativeLayout>
    <View
        android:id="@+id/hall_mine_fragment_lv_item_btm_divider"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_gray"
        >

    </View>
</LinearLayout>