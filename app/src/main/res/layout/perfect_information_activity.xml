<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/perfect_information_activity_save_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/main_blue_color"
            android:layout_alignParentBottom="true"
            android:text="保存"
            android:textColor="@color/white"
            />


        <ListView
            android:id="@+id/perfect_information_activity_lv"
            android:layout_above="@+id/perfect_information_activity_save_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@drawable/listview_selector"
            android:dividerHeight="1dp"
            android:divider="@color/text_gray"
            >
        </ListView>
    </RelativeLayout>



</LinearLayout>