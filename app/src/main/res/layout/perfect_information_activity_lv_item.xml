<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <View
        android:id="@+id/perfect_information_activity_lv_item_gray_line"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bg_gray"
        android:visibility="gone"
        ></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/perfect_information_activity_lv_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="小明"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/perfect_information_activity_lv_item_right_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/right_arrow" />

        <com.jgkj.parentscycle.widget.CircularImage
            android:id="@+id/perfect_information_activity_lv_item_user_icon_iv"
            android:layout_toLeftOf="@+id/perfect_information_activity_lv_item_right_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="10dp" />

        <EditText
            android:id="@+id/perfect_information_activity_lv_item_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@null"
            android:gravity="right"
            android:textSize="@dimen/normal_text_size"
            android:layout_toLeftOf="@+id/perfect_information_activity_lv_item_right_arrow_iv"
            android:minWidth="100dp"
            />

        <TextView
            android:id="@+id/perfect_information_activity_lv_item_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/perfect_information_activity_lv_item_right_arrow_iv"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:text="小明"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/black" />


    </RelativeLayout>


</LinearLayout>