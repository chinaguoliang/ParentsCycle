<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@mipmap/login_activity_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="#99000000"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/login_activity_user_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:src="@mipmap/user_default_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="60dp"
            android:gravity="center_vertical"
            android:background="@drawable/login_et_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:src="@mipmap/login_account" />
            <EditText
                android:id="@+id/login_activity_user_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:background="@null"
                android:paddingTop="@dimen/edittext_top_btm_padding"
                android:singleLine="true"
                android:layout_marginLeft="5dp"
                android:paddingBottom="@dimen/edittext_top_btm_padding"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/login_et_bg"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"

            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:src="@mipmap/login_pass" />

            <EditText
                android:id="@+id/login_activity_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:singleLine="true"
                android:maxLength="20"
                android:layout_marginLeft="5dp"
                android:paddingTop="@dimen/edittext_top_btm_padding"
                android:paddingBottom="@dimen/edittext_top_btm_padding"
                android:textColor="@color/white"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/login_activity_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_corners_blue_bg"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/login_activity_layout_Immediate_experience_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即体验"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@drawable/round_corners_blue_bg"
            android:textColor="@color/white"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/login_activity_forget_pass_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/login_activity_register_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/round_corners_gray_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                />

        </RelativeLayout>

        <include layout="@layout/bottom_share_im"/>
    </LinearLayout>




</LinearLayout>