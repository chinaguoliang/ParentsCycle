<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#00000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/main_activity_bottom_bar_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#13101b"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"

                >

                <LinearLayout
                    android:id="@+id/main_activity_bottom_bar_main_channel_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/main_activity_bottom_bar_main_channel_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/main_activity_home_channel_no_selected"
                        />

                    <TextView
                        android:id="@+id/main_activity_bottom_bar_main_channel_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/main_blue_color"
                        android:gravity="center"
                        android:text="主频道" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_activity_bottom_bar_dynamic_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/main_activity_bottom_bar_dynamic_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/main_activity_btm_dynamic_no_selected"
                        />

                    <TextView
                        android:id="@+id/main_activity_bottom_bar_dynamic_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="动态" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

                <LinearLayout
                    android:id="@+id/main_activity_bottom_bar_find_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/main_activity_bottom_bar_find_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/main_activity_find_no_selected"
                        />

                    <TextView
                        android:id="@+id/main_activity_bottom_bar_find_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="发现" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_activity_bottom_bar_mine_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/main_activity_bottom_bar_mine_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/main_activity_mine_no_selected"
                        />

                    <TextView
                        android:id="@+id/main_activity_bottom_bar_mine_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="我" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_above="@+id/main_activity_bottom_bar_ll"
                android:background="@color/black" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/main_activity_bottom_bar_publish_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:src="@mipmap/main_activity_publish_no_selected" />

    </RelativeLayout>


</LinearLayout>