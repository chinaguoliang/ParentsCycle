<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    android:background="#00000000"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:id="@+id/main_activity_bottom_bar_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@color/white"
                android:orientation="horizontal"

                >


                <TextView
                    android:id="@+id/main_activity_bottom_bar_main_channel_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/main_activity_home_channel_no_selected"
                    android:gravity="center"
                    android:text="主频道" />

                <TextView
                    android:id="@+id/main_activity_bottom_bar_dynamic_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/main_activity_btm_dynamic_no_selected"
                    android:gravity="center"
                    android:text="动态" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />


                <TextView
                    android:id="@+id/main_activity_bottom_bar_find_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/main_activity_find_no_selected"
                    android:gravity="center"
                    android:text="发现" />

                <TextView
                    android:id="@+id/main_activity_bottom_bar_mine_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/main_activity_mine_no_selected"
                    android:gravity="center"
                    android:text="我" />

            </LinearLayout>
            <TextView
                android:layout_above="@+id/main_activity_bottom_bar_ll"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/black"
                />
        </RelativeLayout>


            <ImageView
                android:id="@+id/main_activity_bottom_bar_publish_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:src="@mipmap/main_activity_publish_no_selected" />

    </RelativeLayout>


</LinearLayout>